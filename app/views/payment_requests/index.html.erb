<p id="notice"><%= notice %></p>

<h1>Payment Requests</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Currency</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_requests.each do |payment_request| %>
      <tr>
        <td><%= payment_request.amount %></td>
        <td><%= payment_request.currency %></td>
        <td><%= payment_request.status %></td>
        <td><%= link_to 'Accept', accept_payment_request_path(payment_request)  %></td>
        <td><%= link_to 'Reject', reject_payment_request_path(payment_request), method: :put, remote: true, :onclick => 'reject(this)' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript" charset="utf-8">
  function reject(){
    debugger
    $.ajax( {url: this.attr('href'), type: 'PUT'} )
  }

</script>
